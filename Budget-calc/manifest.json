{
  "manifest_version": 3,
  "name": "Budget Estimator",
  "description": "Track your spending and manage your budget limits directly from your browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "64": "images/icon-64.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background":{ 
    "service_worker":"eventPage.js",
    "type":"module"
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page":"optionPage.html"
}